{
  "name": "ralph-orchestrator-ts",
  "version": "1.0.0",
  "description": "AI agent orchestration system - TypeScript/Bun port of ralph-orchestrator",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "ralph": "./src/cli.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "cli": "bun run src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check ./src",
    "format": "bunx @biomejs/biome format --write ./src",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "web": "bun run src/web/index.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "fuzzball": "^2.1.3",
    "hono": "^4.7.4",
    "jose": "^6.0.11",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "systeminformation": "^5.25.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.14",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "ai",
    "agent",
    "orchestration",
    "claude",
    "automation",
    "bun",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  }
}
